    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <meta name="viewport" content="width=device-width">
        <title>{{ config.metadata.title }}</title>
        <meta name="description"        content="{{ config.metadata.description }}">
        <meta property="og:title"       content="{{ config.metadata.title }}" />
        <meta property="og:description" content="{{ config.metadata.description }}" />
        <meta property="og:url"         content="{{ config.facebook.canvas_page }}" />
        <!-- <meta property="og:image"       content="{{ siteUrl('/img/app_image.jpg') }}" /> -->
        <link rel="stylesheet" href="{{ siteUrl('/css/style.css') }}">
        <script src="//cdnjs.cloudflare.com/ajax/libs/modernizr/2.6.2/modernizr.min.js"></script>
    </head>
    <body>
        <div id="fb-root"></div>
        <div class="container">
            {% block content %}{% endblock %}
        </div>

        {# in case of emergency, uncomment for jQuery #}
        {# <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script> #}
        {# <script>jQuery || document.write('<script src="js/jquery.min.js"><\/script>')</script> #}

        <script>
        // set vars filled with config data
        var vars = {
            'appid'       : '{{ config.facebook.appid }}',
            'baseUrl'     : '{{ config.general.base_url }}',
            'channelUrl'  : '{{ siteUrl("/channel") }}',
            'canvasUrl'   : '{{ config.facebook.canvas_page }}',
            'description' : '{{ config.metadata.description }}'
        };
        </script>
        <script src="{{ siteUrl('/js/scripts.js') }}"></script>
        {% block scripts %}{% endblock %}
    </body>
</html>
